<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <EditText
        android:id="@+id/json_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入url"/>

    <Button
        android:id="@+id/json_start"
        android:layout_below="@id/json_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Start"/>

    <Button
        android:id="@+id/json_empty"
        android:layout_toRightOf="@id/json_start"
        android:layout_below="@id/json_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Empty"/>

    <Button
        android:id="@+id/json_back"
        android:layout_toRightOf="@id/json_empty"
        android:layout_below="@id/json_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Back"/>

    <ScrollView
        android:layout_below="@id/json_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/json_jsontxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</RelativeLayout>
