<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.warmfire.asynctasktest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <!-- 连接互联网Internet权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许应用程序联网，以便向我们的服务器端发送数据。 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许应用程序对用户词典的访问。 -->
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY" />
    <uses-permission android:name="android.permission.WRITE_USER_DICTIONARY" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.warmfire.asynctasktest.MainActivity"
            android:label="MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.HandlerActivity"
            android:label="HandlerActivity"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.ServletActivity"
            android:label="ServletActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.JsonActivity"
            android:label="JsonActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.ActivityActivity"
            android:label="ActivityActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.LinearlayoutActivity"
            android:label="LinearlayoutActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.RelativelayoutActivity"
            android:label="RelativelayoutActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.TablelayoutActivity"
            android:label="TablelayoutActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.AbsoultelayoutActivity"
            android:label="AbsoultelayoutActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.FramelayoutActivity"
            android:label="FramelayoutActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.ContentProviderActivity"
            android:label="ContentProviderActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.ServiceActivity"
            android:label="ServiceActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.BroadCastActivity"
            android:label="BroadCastActivity" >
        </activity>
        <activity
            android:name="com.example.warmfire.asynctasktest.AnimationActivity"
            android:label="AnimationActivity" >
        </activity>

        <service android:name="com.example.warmfire.asynctasktest.HelloService" />

        <receiver android:name="com.example.warmfire.asynctasktest.MyBroadCast" >
            <intent-filter>
                <action android:name="com.example.warmfire.asynctasktest.MyBroadCast" />
            </intent-filter>
        </receiver>
    </application>

</manifest>