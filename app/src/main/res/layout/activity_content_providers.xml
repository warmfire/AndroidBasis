<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp" >

    <EditText
        android:id="@+id/cp_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cp_insert"
        android:layout_below="@id/cp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="insert"/>

    <Button
        android:id="@+id/cp_delete"
        android:layout_toRightOf="@id/cp_insert"
        android:layout_below="@id/cp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"/>

    <Button
        android:id="@+id/cp_update"
        android:layout_toRightOf="@id/cp_delete"
        android:layout_below="@id/cp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"/>

    <Button
        android:id="@+id/cp_back"
        android:layout_toRightOf="@id/cp_update"
        android:layout_below="@id/cp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"/>

    <ListView
        android:id="@+id/cp_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cp_insert" />

</RelativeLayout>
